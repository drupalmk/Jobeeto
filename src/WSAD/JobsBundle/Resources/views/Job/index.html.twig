{% extends "::base.html.twig" %}
{% block content %}
<div id="jobs">
    {% for category in categories %}
    <div class="category_{{category.slug}}">
     <div class="category">
        <div class="feed">
           <a href="">Feed</a>
        </div>
     </div>
     <h1>{{category.name}}</h1>
    <table class="jobs">
	    {% for job in category.activeJobs %}
	    <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
	    <td class="location">{{ job.location }}</td>
	    <td class="position">
	      <a href="{{ path('job_show', { 'id': job.id, 'slug': job.slug }) }}">
	        {{ job.position}}
	      </a>
	    </td>
	    <td class="company">{{ job.company }}</td>
    </tr>
    {% endfor %}      
    </table>
    {% endfor %}          
    </div>
</div>
{% endblock %}

